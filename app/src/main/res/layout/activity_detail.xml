<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity">

    <ImageView
        android:transitionName="@string/transition_drawable"
        android:id="@+id/imvColoredBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divCenter"
        />

    <TextView
        android:transitionName="@string/transition_time_and_date"
        style="@style/Text.Primary"
        android:id="@+id/lblDateAndTimeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divCenter"
        android:background="@color/colorTransparentBlack"
        tools:text="2:43AM 09/7/2018"
        />


    <View
        android:id="@+id/divCenter"
        style="@style/Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:transitionName="@string/transition_message"
        style="@style/Text.Secondary"
        android:id="@+id/lblMessageBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divCenter"
        tools:text="Check out content like Fragmented Podcast to expose yourself to the knowledge, ideas and opinions of experts"
        />
</RelativeLayout>